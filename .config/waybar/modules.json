{
    // Workspaces
    "hyprland/workspaces" : {
		"format": "{icon}",
        "on-click": "activate",
		"sort-by-number": true,
        "all-outputs": false,
        "active-only": false,
		"sort-by-number": true,
		"format-icons": { // " ", " ",
			"1": " ",
			"2": " ",
			"4": " ",
			"5": "󰴢 ",
			"6": " ",
			"7": " "
		},
        //"persistent-workspaces": {
        //     "*": 7
        //}
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "casual-kitty",
           "cava",
           "cpu-temp",
           "fans",
           "htop-btop-ptop",
           "nvtop",
           "wavemon",
           "Path of Exile 2"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    // Updates Count
    "custom/updates": {
        "format": " {}",
        "tooltip-format": "{}",
        "escape": true,
        "return-type": "json",       
        "exec": "~/.config/waybar/scripts/updates.sh",
        "restart-interval": 60,
        "on-click": "kitty -1 -e ~/.config/.local/bin/sys-update.sh",
        "tooltip": false
    },
    
    // Filemanager Launcher
    "custom/filemanager": {
        "format": "",
        "on-click": "nautilus",
        "tooltip": false
    },

    // Notification center
    //"custom/notifications": {
    //    "format": "",
    //    "on-click": "kitty -1 -e bat /tmp/notify.log",
    //    "tooltip": false
    //},

    // SwayNC
    "custom/notifications": {
      "tooltip-format": "Left: Notifications\nRight: Do not disturb",
      "format": "{icon}",
      "format-icons": {
        "notification": "<span foreground='red'><sup></sup></span>",
        "none": "",
        "dnd-notification": "<span foreground='red'><sup></sup></span>",
        "dnd-none": "",
        "inhibited-notification": "<span foreground='red'><sup></sup></span>",
        "inhibited-none": "",
        "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
        "dnd-inhibited-none": ""
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true,
      "tooltip": false
    },

    // Screenlock button
    "custom/idling": {
        "format": "󰡭",
        "on-click": "~/.config/hypr/scripts/hypridle-script",
        "tooltip": false
    },

    // App dock toggle button
    "custom/dock-toggle": {
        "format": "󰀻",
        "on-click": "~/.config/hypr/scripts/dock-toggle-hyprland",
        "tooltip": false
    },

    // QEMU Launcher
    "custom/qemu": {
        "format": "<span font='18'></span> <span font='16'></span>",
        "on-click": "virt-manager",
        "tooltip": false
    },

    // AGS Sidebar
    "custom/ags-sidebar": {
      "on-click": "sleep 0.1 && ags toggle sidebar",
      //"on-click-right": "",
      "format": "",
      "tooltip": false
    },

    // Proton VPN Launcher
    "custom/pvpn": {
        "format": "<span font='16'>󰦝</span> <span font='16'></span>",
        "on-click": "protonvpn-app",
        "tooltip": false
    },

    // Telegram Launcher
    "custom/telegram": {
        "format": "<span font='16'></span> <span font='16'></span>",
        "on-click": "telegram-desktop",
        "tooltip": false
    },

    // Steam Launcher
    "custom/steam": {
        "format": "<span font='16'></span> <span font='16'></span>",
        "on-click": "steam",
        "tooltip": false
    },

    // Proton Mail Launcher
    "custom/pmail": {
        "format": "<span font='16'></span> <span font='16'></span>",
        "on-click": "/usr/bin/proton-mail %U",
        "tooltip": false
    },

    // Windows VM
    "custom/windowsvm": {
        "format": "",
        //"on-click": "~/.config/hypr/scripts/launch-vm",
        "tooltip": false
    },
    
    // Power Menu
    "custom/exit": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },

    // System tray
    "tray": {
        "show-passive-items": true,
        "icon-size": 21,
        "spacing": 5
    },

    // Clock
    "clock": {
        //"timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}",
    },

    // CPU
    "cpu": {
		"format": " {usage}%",
        "on-click": "kitty -1 --hold -e cpufetch"
    },

    // Memory
    "memory": {
        "format": " {}%",
    },

	// Cputemp
	"custom/cputemp":{
		"format": " {}",
		"exec": "~/.config/waybar/scripts/cpu-temp.sh",
		"interval": 15,
	},

	// Uptime
	"custom/uptime":{
		"format": " {}",
		"exec": "~/.config/waybar/scripts/upt.sh",
		"interval": 60,
    "on-click": "gnome-clocks",
		"tooltip": false
	},

	// Weather
	"custom/weather": {
		"tooltip": true,
		"format": "{}",
		"interval": 300,
		"exec": "~/.config/waybar/scripts/weather.sh",
    "on-click": "gnome-weather",
		"return-type": "json",
	},

    // Hard disk space used
    "disk": {
        "interval": 30,
        "format": " {percentage_used}%",
        "path": "/",
    }, 
    
    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": " {signalStrength}%",
        "format-ethernet": "  {ipaddr}",
        "format-disconnected": "Not connected", //An empty format will hide the module.
        "tooltip-format": " {ifname} via {gwaddri}",
        "tooltip-format-wifi": "   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "nm-connection-editor"
    },

    // Battery
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{icon}  {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
    },

    // Pulseaudio
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}{volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": "󰝟 {icon} {format_source}",
        "format-muted": "<span font='16'>󰝟</span> <span font='16'></span>{volume}%",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": " ",
            "hands-free": " ",
            "headset": " ",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": ["", " ", " "]
        },
        "on-click": "pavucontrol",
        "on-scroll-up": "",
        "on-scroll-down": ""
    },

    // Bluetooth
    "bluetooth": {
        "format": "",
        "format-disabled": "󰂳",
        "format-connected": "󰂱 {num_connections}",
        "tooltip-format": " {device_alias}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": " {device_alias} 󰂄{device_battery_percentage}%",
        "tooltip": true,
        "on-click": "blueberry",
    },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false,
    }
}
