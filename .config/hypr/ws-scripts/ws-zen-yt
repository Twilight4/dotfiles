#!/bin/bash

YOUTUBE_URL="https://www.youtube.com"

# Function to check if a Zen YouTube tab is running
is_zen_youtube_running() {
  hyprctl clients | grep -E 'title: .* YouTube â€” Zen Browser$' >/dev/null
}

# Move to workspace 5
hyprctl dispatch workspace 5

# If Zen with YouTube is NOT running
if ! is_zen_youtube_running; then
  # Launch Zen browser with YouTube
  hyprctl dispatch exec "zen-browser \"$YOUTUBE_URL\""
else
  # Focus on the already-running window
  hyprctl dispatch workspace 5
fi
